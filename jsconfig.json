{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@services/*": ["services/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}

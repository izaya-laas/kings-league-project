---
import Layout from '../layouts/Layout.astro'

const response = await fetch('https://kings-league-api.lautaronorielasat.workers.dev/teams')
const teams = await response.json();
---

<Layout title="Welcome to Astro.">
	<header class="flex flex-row w-full justify-center gap-x-4">
		{ teams.map(({ url: image, name, id }) => (
			<a>
				<img class="aspect-square w-16" src={image} alt={`escudo del equipo ${name}`}>
			</a>
		)
		)}
		<nav>
			<ul>
				<li>
					<a href="/equipos">Equipos</a>
				</li>
				<li>
					<a href="/calendario">Calendario</a>
				</li>
				<li>
					<a href="/estadisticas">Estadisticas</a>
				</li>
				<li>
					<a href="/contacto">Contacto</a>
				</li>
				<li>
					<a href="/reglamento">Reglamento</a>
				</li>
			</ul>
		</nav>
	</header>
	<main>
		<h1>Hello</h1>
	</main>
</Layout>

---

<footer class="py-10 px-20 mt-10 bg-black flex items-center justify-between">
	<section class="flex flex-col items-center gap-4">
		<img class="w-40" src="/public/kings-league-alternative.svg" alt="Logo Kings League">
		<nav>
			<ul class="flex gap-6">
				{
					socialMedias.map(({ name, path, href }) => (
						<li>
							<a href={href}>
								<img class="w-6" src={path} alt={name}>
							</a>
						</li>
							))
						}
				</ul>
		</nav>
	</section>
	<section class="text-white">
		<div>
			<nav>
				<ul class="grid grid-cols-3 gap-2 place-items-center">
					{
						navLinks.map(({ name, href }) => (
							<li>
								<a href={href}>{name}</a>
							</li>
						))
					}
				</ul>
			</nav>
		</div>
		<div class="mt-8 text-xs">
			<ul class="flex gap-x-4">
				{
					legals.map(({ name, href }) => (
						<li>
							<a href={href}>{name}</a>
						</li>
					))
				}
			</ul>
		</div>
	</section>
</footer>

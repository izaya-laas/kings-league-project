---
import ListSocialNetworks from './ListSocialNetworks.astro'

const navLinks = [
	{
		name: 'Equipos',
		href: '/equipos'
	},
		{
		name: 'Estadisticas',
		href: '/estadisticas'
	},
		{
		name: 'Faqs',
		href: '/faqs'
	},
		{
		name: 'Jugador 12',
		href: '/jugador-12'
	},
		{
		name: 'Reglamento',
		href: '/reglamento'
	},
		{
		name: 'Draft',
		href: '/draft'
	},
		{
		name: 'Calendario',
		href: '/calendario'
	}
]

const legals = [
	{
		name: 'Contacto',
		href: '/contacto'
	},	{
		name: 'Politica de privacidad',
		href: '/politica-privacidad'
	},	{
		name: 'Contacto',
		href: '/aviso-legal'
	},	{
		name: 'Politica Cookies',
		href: '/politica-cookies'
	}
]
---

<footer class="py-10 bg-black">
	<div class="w-11/12 mx-auto flex flex-col sm:flex-row items-center justify-between">
		<section class="flex flex-col items-center gap-4 mb-10 sm:mb-0">
			<img class="w-40" src="/public/kings-league-alternative.svg" alt="Logo Kings League">
		<ListSocialNetworks/>
	</section>
	<section class="text-white">
		<div>
			<nav>
				<ul class="flex flex-wrap justify-center gap-4 sm:grid sm:grid-cols-3 sm:gap-2 sm:place-items-center">
					{
						navLinks.map(({ name, href }) => (
							<li class="justify-self-center self-center">
								<a href={href}>{name}</a>
							</li>
						))
					}
				</ul>
			</nav>
		</div>
		<nav class="mt-8 text-xs">
			<ul class="flex justify-center flex-wrap sm:flex-nowrap sm:justify-start whitespace-nowrap gap-4 sm:gap-y-0 sm:gap-x-2">
				{
					legals.map(({ name, href }) => (
						<li>
							<a href={href}>{name}</a>
							</li>
							))
						}
			</ul>
		</nav>
	</section>
</div>
</footer>

	},
	{
		name: 'Logo TikTok',
		path: '/social/tiktok.svg',
		href: 'https://www.tiktok.com/@kingsleague'
	},
	{
		name: 'Logo Youtube',
		path: '/social/youtube.svg',
		href: 'https://www.youtube.com/@KingsLeagueOfficial'
	}
]

const navLinks = [
	{
		name: 'Equipos',
		href: '/equipos'
	},
		{
		name: 'Estadisticas',
		href: '/estadisticas'
	},
		{
		name: 'Faqs',
		href: '/faqs'
	},
		{
		name: 'Jugador 12',

---
import ListItem from './ListItem.astro'

const socialMedias = [
	{
		name: 'Logo Instagram',
		path: '/social/instagram.svg',
		href: 'https://instagram.com/kingsleague'
	},
	{
		name: 'Logo Twitch',
		path: '/social/twitch.svg',
		href: 'https://twitch.tv/kingsleague'
	},
	{
		name: 'Logo Twitter',
		path: '/social/twitter.svg',
		href: 'https://twitter.com/kingsleague'
	},
	{
		name: 'Logo TikTok',
		path: '/social/tiktok.svg',
		href: 'https://www.tiktok.com/@kingsleague'
	},
	{
		name: 'Logo Youtube',
		path: '/social/youtube.svg',
		href: 'https://www.youtube.com/@KingsLeagueOfficial'
	}
]

const { class: styles } = Astro.props
---

<nav>
			<ul class={`flex gap-6 ${styles}`}>
				{
					socialMedias.map(({ name, path, href }) => (
							<ListItem href={href} src={path} alt={name}/>
							))
						}
			</ul>
</nav>

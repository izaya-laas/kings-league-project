---
import NavbarItem from './NavbarItem.astro'

const legals = [
	{
		name: 'Contacto',
		href: '/contacto',
		disable: true
	},
	{
		name: 'Politica de privacidad',
		href: '/politica-privacidad',
		disable: true
	},
	{
		name: 'Contacto',
		href: '/aviso-legal',
		disable: true
	},
	{
		name: 'Politica Cookies',
		href: '/politica-cookies',
		disable: true
	}
]
---

<nav class="mt-8 text-xs">
	<ul class="flex justify-center flex-wrap sm:flex-nowrap sm:justify-start whitespace-nowrap gap-4 sm:gap-y-0 sm:gap-x-2">
		{
			legals.map(({ name, href, disable }) => (
				<NavbarItem cursor={`${disable ? 'text-gray-500 cursor-default' : ''}`} href={disable ? '/' : href}>
					{name}
				</NavbarItem>
					))
				}
	</ul>
</nav>
